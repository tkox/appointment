page{
    background-color: #ffffff;
    font-family: "Helvetica Neue","Hiragino Sans GB","Microsoft YaHei","\9ED1\4F53",Arial,sans-serif;
    font-size: 32rpx;
}

.categroy-left{
    float: left;
    width: 250rpx;
    height: 100%;
    border-right: 1px solid #ddd;
    box-sizing: border-box;
}

.cate-list{
    line-height: 90rpx;
    font-size: 36rpx;
    text-align: center;
    border-left: 2rpx solid #fff;
    border-bottom: 2rpx solid #fff;
}

.cate-list-on{
    line-height: 90rpx;
    font-size: 36rpx;
    text-align: center;
    border-left: 2rpx solid #fff;
    border-bottom: 2rpx solid #AB956D;
    color: #AB956D;
}

.item-arr-active {
    font-size: 24rpx;
    color: #0ab;
    line-height: 90rpx;
    text-align: center;
    border-left: 2rpx solid #fff;
}

.item-arr {
    font-size: 24rpx;
    color: #AB956D;
    line-height: 90rpx;
    text-align: center;
    border-left: 2rpx solid #fff;
}

.categroy-right{
    float: right;
    width: 600rpx;
    height: 100%;
    overflow: hidden;
}

.cate-box{
    height: 100%;
    padding:40rpx;
    box-sizing: border-box;
}
